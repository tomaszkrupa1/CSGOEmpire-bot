{
  "manifest_version": 3,
  "name": "CSGO Auto Bet Extension",
  "version": "1.0",
  "description": "Automated betting script for CSGO gambling.",
  "permissions": ["activeTab", "storage", "declarativeContent",  "scripting"],
  "content_scripts": [
    {
      "matches": ["https://csgoempire.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
    "32": "icons/32.png",
    "192": "icons/192.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "192": "icons/192.png"
  }
}
